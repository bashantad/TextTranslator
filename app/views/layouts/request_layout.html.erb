<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8"/>

	<title>Welcome to TextTranslater.com</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag :application %>
  <%= javascript_include_tag :jquery %>
  <%= csrf_meta_tags %>
</head>
<body>
  
	<header id="header">
		<hgroup>
			<h1 class="site_title"><a href="#">TextTranslator.com</a></h1>
		</hgroup>
	</header> <!-- end of header bar -->
	
	<section id="secondary_bar">
		<div class="user">
			<!-- <p>John Doe (<a href="#">3 Messages</a>)</p> -->
			<p></p>
			<!-- <a class="logout_user" href="#" title="Logout">Logout</a> -->
		</div>
		<div class="breadcrumbs_container">
		   <% if requester_signed_in? %>
			<article class="breadcrumbs">
        Welcome <%= current_requester.email %>   
			   <div class="breadcrumb_divider"></div></article>
			   	<article class="breadcrumbs">
     		   <%= link_to 'Logout', destroy_requester_session_path, :method => 'get' %> 
   			   <div class="breadcrumb_divider"></div></article>
     			    <% end %>
		</div>
	</section><!-- end of secondary bar -->
  <aside id="sidebar" class="column">
   	<% if requester_signed_in? %>
   	<h3>Requester</h3>
   	  <ul class="toggle">
   	    <li class="icn_new_article"><%= link_to 'All submitted tasks', request_tasks_path %></li>
   			<li class="icn_new_article"><%= link_to 'Submit a new work', new_request_task_path %></li>
   				<li class="icn_categories"><a href="#">My Credit: <%=current_requester.credit%></a></li>
   		</ul>
   		<% else%>
   	  <h3>TranslatorText.com</h3>
   	  <strong>Login to have more access</strong>
   		<% end %>
   	  </aside>
	<section id="main" class="column">
		<article class="module width_full">
			<header><h3>TextTranslator.com</h3></header>
			<div class="module_content">
				<article class="stats_graph">
				  <p class="notice"><%= notice %></p>
           <p class="alert"><%= alert %></p>
					<%=yield%>
				</article>	
				<div class="clear"></div>
			</div>
		</article><!-- end of stats article -->
		

		<div class="clear"></div>
		
		<article class="module width_full">
			<footer>
				<div class="submit_link">
					Designed by <a href = "#">Cloud factory Engineers</a>
			</footer>
		</article><!-- end of post new article -->
		<div class="spacer"></div>
	</section>


</body>

</html>